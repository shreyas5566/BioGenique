<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".member">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorToolBar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/AppTheme">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>

    <ImageButton
        android:id="@+id/home"
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/home"
        android:clickable="true"
        android:onClick="MainActivity" />

    <ImageView
        android:id="@+id/logohome"
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/biogenique" />

    <TextView
        android:id="@+id/loginnevigration"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="241dp"
        android:layout_marginLeft="241dp"
        android:layout_marginEnd="241dp"
        android:layout_marginRight="241dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Home > LogIn"
        android:textAllCaps="true"
        android:textColor="#1994C6"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/usernameLabel"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_below="@+id/logohome"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="54dp"
        android:fontFamily="serif"
        android:gravity="center|left"
        android:text="E-mail/Username : "
        android:textAllCaps="true"
        android:textColor="#1994C6"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/usernameedit"
        android:layout_width="218dp"
        android:layout_height="43dp"
        android:layout_below="@id/home"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/usernameLabel"
        android:layout_toRightOf="@+id/usernameLabel"
        android:fontFamily="serif"
        android:gravity="center|left"
        android:textAllCaps="true"
        android:textColor="#1994C6"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/passwordlabel"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@+id/usernameLabel"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="26dp"
        android:fontFamily="serif"
        android:gravity="center|left"
        android:text="Password : "
        android:textAllCaps="true"
        android:textColor="#1994C6"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/passwordedit"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameedit"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/passwordlabel"
        android:layout_toRightOf="@+id/passwordlabel"
        android:fontFamily="serif"
        android:gravity="center|left"
        android:inputType="textPassword"
        android:textAllCaps="true"
        android:textColor="#1994C6"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/signup"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_below="@+id/passwordedit"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="121dp"
        android:layout_marginLeft="121dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="109dp"
        android:layout_marginRight="109dp"
        android:clickable="true"
        android:onClick="signup"
        app:srcCompat="@drawable/signup" />


</RelativeLayout>